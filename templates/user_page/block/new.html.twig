<div class="container">
    <div class="section-header">
        <p>Những bộ phim mới nhất</p>
        <h2>phim mới</h2>
    </div>
    <!--/.section-header-->
    <div class="new-cars-content">
        <div class="owl-carousel owl-theme" id="new-cars-carousel">
            {% for new_movie in new_movies %}
                <div class="new-cars-item">
                    <div class="single-new-cars-item">
                        <div class="row">
                            <div class="col-md-7 col-sm-12">
                                <div class="new-cars-img">
                                    <img style="object-fit: cover; width:653px; height:296px" src="{{ new_movie.img }}" alt="img"/>
                                </div>
                            </div>
                            <div class="col-md-5 col-sm-12">
                                <div class="new-cars-txt">
                                    <h2>
                                        <a href="#">{{ new_movie.title }}</a>
                                    </h2>
                                    {% set words = new_movie.decription|split(' ') %}
                                    {% set limited_decription = words|slice(0, 65)|join(' ') %}
                                    {% if words|length > 65 %}
                                        <p>{{ limited_decription }}...</p>
                                    {% else %}
                                        <p>{{ new_movie.decription }}</p>
                                    {% endif %}
                                    <button class="welcome-btn new-cars-btn" onclick="window.location.href='/detail-product/{{new_movie.id}}'">Xem chi tiết</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>